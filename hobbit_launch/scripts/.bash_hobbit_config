#ssh connection to head (pi)
alias sshpi='ssh -X pi@192.168.2.199'

#update (=>copy) files on robot head (pi)
#alias updateHead="source /opt/ros/hobbit_hydro/src/hobbit_launch/launch/HeadScripts/updateHead.sh"

#short cut for changing .bashrc 
alias dfb="sudo gedit ~/.bashrc"
#short cut for sourcing .bashrc 
alias dfbs="source ~/.bashrc"

# Call hobbit to one of the call buttons
alias call1="rostopic pub -1 /Event hobbit_msgs/Event '{header: auto, event: E_CALLHOBBIT, confidence: 0.8, params: [{name: 'place', value: 'CALL1'}, {name: sensor, value: 'CALL1'}]}'"
alias call2="rostopic pub -1 /Event hobbit_msgs/Event '{header: auto, event: E_CALLHOBBIT, confidence: 0.8, params: [{name: 'place', value: 'CALL2'}, {name: sensor, value: 'CALL2'}]}'"
alias call3="rostopic pub -1 /Event hobbit_msgs/Event '{header: auto, event: E_CALLHOBBIT, confidence: 0.8, params: [{name: 'place', value: 'CALL3'}, {name: sensor, value: 'CALL3'}]}'"
alias call4="rostopic pub -1 /Event hobbit_msgs/Event '{header: auto, event: E_CALLHOBBIT, confidence: 0.8, params: [{name: 'place', value: 'CALL4'}, {name: sensor, value: 'CALL4'}]}'"
alias callb="rostopic pub -1 /Event hobbit_msgs/Event '{header: auto, event: E_CALLHOBBIT, confidence: 0.8, params: [{name: 'place', value: 'CALLb'}, {name: sensor, value: 'CALLb'}]}'"

# trigger pointing gesture
alias pntges="rostopic pub /pointEvents rgbd_acquisition/PointEvents '{x: 0, y: 0, z: 2, vectorX: 0, vectorY: 1, vectorZ: 0, leftHand: 1, rightHand: 0,  timestamp: 0}' -1"

# create and show visualization of tf-frames
alias tfc="rosrun tf2_tools view_frames.py"
alias tfs="gnome-open frames.pdf"

#/etc/init.d/chrony start
