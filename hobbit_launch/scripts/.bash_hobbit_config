# MIRA configuration

export MIRA_PATH=/localhome/demo/mira/mira-base
export LD_LIBRARY_PATH=${LD_LIBRARY_PATH}:/localhome/demo/mira/mira-base/lib
export PATH=${PATH}:/localhome/demo/mira/mira-base/bin
source /localhome/demo/mira/mira-base/scripts/mirabash

export MIRA_PATH=${MIRA_PATH}:/localhome/demo/mira/mira-commercial
export LD_LIBRARY_PATH=${LD_LIBRARY_PATH}:/localhome/demo/mira/mira-commercial/lib

# generated by mirawizard on 2014-Mar-21 09:17:47.426925
export MIRA_PATH=$MIRA_PATH:/localhome/demo/mira/mira-hobbit
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/localhome/demo/mira/mira-hobbit/lib

# ROS configuration
#export ROS_HOSTNAME=192.168.2.122				   
export ROS_IP=192.168.2.122                                        
export ROS_MASTER_URI=http://192.168.2.122:11311
#source /opt/ros/hydro/setup.bash
source /opt/ros/hobbit_hydro/devel/setup.bash

#needed for bash autocompletion with ROS
export LC_ALL="en_US.UTF-8"


# === ALIAS ===

#ssh connection to head (pi)
alias sshpi='ssh -X pi@192.168.2.199'

#update (=>copy) files on robot head (pi)
alias updateHead="source /opt/ros/hobbit_hydro/src/hobbit_launch/launch/HeadScripts/updateHead.sh"

#system commands for xpc/rpi ( see hobbit_launch/launch/System/systemCommands.c ) 
alias systemCommands='/opt/ros/hobbit_hydro/src/hobbit_launch/launch/System/systemCommands'

#short cut for changing .bashrc 
alias dfb="sudo gedit ~/.bashrc"
#short cut for sourcing .bashrc 
alias dfbs="source ~/.bashrc"
#trigger single shot of point cloud from headcamera (table_object_detector/src/trigger.py)
alias trig="rostopic pub /SS/doSingleShot std_msgs/String "asdf" -1"

# Call hobbit to one of the call buttons
alias call1="rostopic pub -1 /Event hobbit_msgs/Event '{header: auto, event: E_CALLHOBBIT, confidence: 0.8, params: [{name: 'place', value: 'CALL1'}, {name: sensor, value: 'CALL1'}]}'"
alias call2="rostopic pub -1 /Event hobbit_msgs/Event '{header: auto, event: E_CALLHOBBIT, confidence: 0.8, params: [{name: 'place', value: 'CALL2'}, {name: sensor, value: 'CALL2'}]}'"
alias call3="rostopic pub -1 /Event hobbit_msgs/Event '{header: auto, event: E_CALLHOBBIT, confidence: 0.8, params: [{name: 'place', value: 'CALL3'}, {name: sensor, value: 'CALL3'}]}'"
alias call4="rostopic pub -1 /Event hobbit_msgs/Event '{header: auto, event: E_CALLHOBBIT, confidence: 0.8, params: [{name: 'place', value: 'CALL4'}, {name: sensor, value: 'CALL4'}]}'"
alias callb="rostopic pub -1 /Event hobbit_msgs/Event '{header: auto, event: E_CALLHOBBIT, confidence: 0.8, params: [{name: 'place', value: 'CALLb'}, {name: sensor, value: 'CALLb'}]}'"

#short cut to stop arm
alias arms="rosrun hobbit_smach ArmStop.py"

# trigger pointing gesture
alias pntges="rostopic pub /pointEvents rgbd_acquisition/PointEvents '{x: 0, y: 0, z: 2000, vectorX: 0, vectorY: 1, vectorZ: 0, leftHand: 1, rightHand: 0,  timestamp: 0}' -1"

# create and show visualization of tf-frames
alias tfc="rosrun tf2_tools view_frames.py"
alias tfs="gnome-open frames.pdf"

alias smach="/opt/ros/hobbit_hydro/src/hobbit_smach/scripts/check_smach_nodes.sh"

#/etc/init.d/chrony start
